modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["arrow-cpp", "cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "hydrus", "libGL", "libGLU", "openssl", "pkg-config", "postgresql", "qhull", "tcl", "tk"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "python3"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[workflows.workflow]]
name = "python3"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -c \"import smint; print(f'SMINT package version: {smint.__version__}'); print('Available modules:'); [print(f'- {module}') for module in smint.__all__]\""

[[ports]]
localPort = 5000
externalPort = 80
